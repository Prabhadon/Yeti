<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="me.kentin.sample" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="me.kentin.sample.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="me.kentin.sample.ActionProviderActivity"
            android:label="@string/app_name"/>

        <activity
            android:name="me.kentin.sample.NormalShareActivity"
            android:label="@string/app_name"/>



        <!-- You HAVE to add is to YOUR manifest. Otherwise, it's not gonna work -->
        <activity android:name="me.kentin.yeti.activity.YetiShareActivity"
            android:excludeFromRecents="true"
            android:theme="@style/BottomSheet.Light"
            tools:ignore="UnusedAttribute" />
        <!---->

    </application>

</manifest>
